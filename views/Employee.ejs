<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="main.css" />
  </head>
  <body>
    <h1>Employee</h1>

    <div class="container">
      <div class="topnav">
        <a href="/train">Train</a>
        <a href="/employee">Employee</a>
        <a href="/station">Station</a>
        <a href="/ticket">Ticket</a>
      </div>
      <p></p>
      <form action="/result">
        <input type="text" id="table" name="table" value="Employee" readonly>

        <label for="id">ID *</label>
        <input type="text" id="id" name="id" placeholder="e.g. 1900804" />
        
        <label for="name">Name</label>
        <input type="text" id="name" name="name" placeholder="Full Name" />
        
        <label for="email">email</label>
        <input type="text" id="email" name="email" placeholder="Example@gmail.com" />
        
        <label for="salary">Salary</label>
        <input type="text" id="salary" name="salary" placeholder="e.g. 500" />

        <label for="address">address</label>
        <input type="text" id="address" name="address" placeholder="1 Neighborhood Lane, Mickey's Toontown" />
        
        <label for="birthdate">birthdate</label>
        <input type="text" id="birthdate" name="birthdate" placeholder="DD/MM/YY" />

        <div class="radio-toolbar"  id="query">
          <input type="radio" id="radioReq" name="req_type" value="query" />
          <label for="radioReq">Query</label>

        </div>
        <div class="radio-toolbar" id="post">


          <input type="radio" id="radioInsert" name="req_type" value="insert" checked />
          <label for="radioInsert">Insert</label>

          <input type="radio" id="radioDelete" name="req_type" value="Delete" />
          <label for="radioDelete">Delete</label>

          <input type="radio" id="radioModify" name="req_type" value="Modify" />
          <label for="radioModify">Modify</label>

</div>
        </div>
        <input type="submit" value="GO" />
      </form>
    </div>

    <div class="bottom-nav">
      <a href="/Janitor">Janitor</a>
      <a href="/outEmp">outEmp</a>
      <a href="/phone">phone</a>
      <a href="/TicketMan">TicketMan</a>
      <a href="/stationEmp">stationEmp</a>
      <a href="/stopBy">stopBy</a>
    </div>
  </body>
</html>
